{% extends "base.html.twig" %}


{% block main %}

    <h1>
        Insertion d'article
    </h1>

    {{  form_start(form, {'attr': {'class': 'form'}}) }}


    <section>

    <div class="formBloc">
        <h2>{{ form_label(form.title) }}</h2>
        {{ form_widget(form.title, { 'attr' : {'class' : 'formTitle'} }) }}
        {{ form_errors(form.title) }}
    </div>

        {% for message in app.flashes('succes') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div>
            <label for="start">Start date:</label>

            <input type="date" id="start" name="date"
                   value="2018-07-22"
                   min="2018-01-01" max="2022-12-31">
        </div>
        <div>
            <label for="appt">Choose a time for your meeting:</label>

            <input type="time" id="appt" name="hours"
                   min="06:00" max="22:00" required>

            <small>Office hours are 6am to 10pm</small>
        </div>





    {{ form_row(form.valider) }}

    {{  form_end(form) }}

{% endblock %}

