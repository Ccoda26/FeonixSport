{% extends "base.html.twig" %}


{% block main %}
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('Article_Update',{'id': article.id }) }}"> Modifier cet article </a>
        <br>
        <a href="{{ path('Article_Delete',{'id': article.id})}}"> Supprimer cet article </a>
    {% endif %}
    <article class="width-90 center">
    <h1 class="text-center">{{ article.title|capitalize }}</h1>

    <hr>

    <p>{{ article.description }}</p>
    {% if article.filename %}
        {% for article in article.filename %}

            <div class="center width-50">
                <img src="{{ asset("assets/uploads/" ~ article.Filename) }}" alt="" class="resp">
            </div>

            {% if is_granted('ROLE_ADMIN') %}
                {{ dump(article) }}
                {#                <a href="{{ path('delete_picture',{'id': article.id}) }}"> Supprimer cet article </a>#}
                <a href="{{ path('delete_article_image',{'id': article.id})}}" data-delete data-token="{{ csrf_token('delete' ~ article.id )}}"> Supprimer cette image </a>
            {% endif %}
        {% endfor %}

        <p class="width-90 text-center">{{ article.content }}</p>
    {% endif %}



    <script src="{{ asset('assets/js/Picture.js') }}"></script>

{% endblock %}