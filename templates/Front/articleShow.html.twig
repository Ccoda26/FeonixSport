{% extends "base.html.twig" %}


{% block main %}

    <article class="width-90 center">
    <h1 class="text-center">{{ article.title|capitalize }}</h1>

    <hr>


    {% if is_granted('ROLE_ADMIN') %}
        <div class="adminlink">
            <a href="{{ path('Article_Update',{'id': article.id }) }}" > Modifier cet article </a>
        </div>
        <div class="adminlink">
            <a href="{{ path('Article_Delete',{'id': article.id})}}" > Supprimer cet article </a>
        </div>
    {% endif %}


    {% for t in text[0:7] %}
        {{ t }}.
    {% endfor %}


    {% if picture[0] %}
        <div class="center width-50">
            <img src="{{ asset("assets/uploads/" ~ picture[0].Filename) }}" alt="" class="resp">
        </div>
    {% endif %}


    {% for t in text[7:9] %}
        {{ t }}.
    {% endfor %}
    {% if picture[1].Filename  %}
        <div class="center text-center width-50">
            <img src="{{ asset("assets/uploads/" ~ picture[1].Filename) }}" alt="" class="resp">
        </div>
    {% endif %}

    {% for t in text[16:] %}
        {{ t }}.
    {% endfor %}




















