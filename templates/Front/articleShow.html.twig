{% extends "base.html.twig" %}


{% block main %}

    <article class="width-90 center">
    <h1 class="text-center">{{ article.title|capitalize }}</h1>

    <hr>


    {% if is_granted('ROLE_ADMIN') %}
        <div class="adminlink">
            <a href="{{ path('Article_Update',{'id': article.id }) }}" > Modifier cet article </a>
        </div>
        <div class="adminlink">
            <a href="{{ path('Article_Delete',{'id': article.id})}}" > Supprimer cet article </a>
        </div>
    {% endif %}


    {% for t in text[0:7] %}
        {{ t }}.
    {% endfor %}


    {% if picture | length >0 %}
        <div class="center width-50">
            <img src="{{ asset("assets/uploads/" ~ picture[0].Filename) }}" alt="{{ picture[0].Filename }}" class="resp">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="adminlink" href="{{ path('delete_picture',{'id': article.id}) }}"> Supprimer cette photo </a>
            {% endif %}
        </div>
    {% endif %}


    {% for t in text[7:9] %}
        {{ t }}.
    {% endfor %}
    {% if picture | length >1 %}
        <div class="center text-center width-50">
            <img src="{{ asset("assets/uploads/" ~ picture[1].Filename) }}" alt="{{ picture[1].Filename }}" class="resp">
            {% if is_granted('ROLE_ADMIN') %}
                <a class="adminlink" href="{{ path('delete_picture',{'id': article.id}) }}"> Supprimer cette photo </a>
            {% endif %}
        </div>
    {% endif %}

    {% for t in text[16:] %}
        {{ t }}.
    {% endfor %}


    <script src="{{ asset('assets/js/Picture.js') }}"></script>


{% endblock %}