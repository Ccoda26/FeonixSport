<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>FeonixSport</title>
{# bootstrap #}
{#        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">#}
{# style.css #}
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    </head>
    <body>
    <header>
        <div class="navigation">
            <div class="logoheader">
                <a href="{{ path('Homepage') }}">
                    <img src="{{ asset('assets/logo/FEONIX_logo.png') }}" alt="" class="resp">
                </a>
            </div>

        <nav>
            <ul class="listenavigation" >
                {% block navigation %}
                    <li><a href="{{ path('All_Articles') }}">Articles</a></li>
                    <li><a href="{{ path('All_Exercices')}}">Exercices</a></li>
                    <li><a href="{{ path('All_Programs') }}">Programmes</a></li>
                    <li><a href="{{ path('page_identity') }}">Qui sommes nous ?</a></li>
                    <li><a href="{{ path('Take_rdv') }}">Prise de Rendez-Vous</a></li>
                {% endblock %}
            </ul>
        </nav>
            {% if app.user %}
                <div class="login connection">
                    <a href="{{ path('User_Page') }}">
                        <img src="{{ asset('assets/img/login.png') }}" alt="" class="resp">
                    </a>
                <h1 class="name">{{ app.user.name }} {{ app.user.lastname }}</h1>
                  <a href="{{ path('app_logout') }}">DECONNEXION</a>
                </div>
            {% else %}
                <div class="login">
                    <a href="{{ path('app_login') }}">
                        <img src="{{ asset('assets/img/login.png') }}" alt="" class="resp">
                    </a>
                </div>
            {% endif %}

        </div>

    </header>

    <main>
        {% block main %}
            {% if is_granted('ROLE_ADMIN') %}
                 <h1>Ma page d'admin</h1>
            {% elseif app.user %}
                <h1>Ma page {{ app.user.name }} {{ app.user.lastname }}</h1>
            {% else %}
                <h1>Ma page d'acceuil</h1>
            {% endif %}
        {% endblock %}
    </main>

    <footer>

    </footer>

    </body>
</html>
