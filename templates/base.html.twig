<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>FeonixSport</title>
    {# bootstrap #}
{#    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">#}


    {# style.css #}
    {% block css %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
</head>
<body>
<header>

    <div class="navigation">
        <div class="logo">
            <a href="{{ path('Homepage') }}">
                <img src="{{ asset('assets/logo/FEONIX_logo.png') }}" alt="" class="resp">
            </a>
        </div>

        <nav class="navheader flex">
            <ul class="listenavigation" >
                {% block navigation %}
                    <li><a href="{{ path('All_Articles') }}" class="lienHeader">Articles</a></li>
                    <li><a href="{{ path('All_Exercices')}}" class="lienHeader">Exercices</a></li>
                    <li><a href="{{ path('All_Programs') }}" class="lienHeader">Programmes</a></li>
                    <li><a href="{{ path('page_identity') }}" class="lienHeader">Qui sommes nous ?</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('Ajouter_Date') }}" class="lienHeader">Ajouter des Rendez-vous</a></li>
                    {% else %}
                        <li><a href="{{ path('Take_rdv') }}" class="lienHeader">Prise de Rendez-Vous</a></li>
                    {% endif %}
                {% endblock %}
            </ul>
        </nav>
        {% if app.user %}

            <div class="login connection">
                <a href="{{ path('MyUser_page', {'id': app.user.id}) }}">
                    <img src="{{ asset('assets/img/login.png') }}" alt="" class="resp">
                </a>
                <h1 class="name">{{ app.user.name }} {{ app.user.lastname }}</h1>
                <a href="{{ path('app_logout') }}" class="logout">DECONNEXION</a>
            </div>
        {% else %}
            <div class="login">
                <a href="{{ path('app_login') }}">
                    <img src="{{ asset('assets/img/login.png') }}" alt="" class="resp">
                </a>
            </div>
        {% endif %}
        <div class="panier flex">
            <a href="{{ path('panier_vide') }}">
                <img src="{{ asset('assets/img/panier.svg') }}" alt="" class="resp">
                <p>Panier</p>
            </a>
        </div>
    </div>

</header>

<main>
    {% block main %}
        <div>
{#            <iframe class="video resp" src="https://www.youtube.com/embed/MY4iHZnE8IU?rel=0&autoplay=1?controls=0" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>#}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
            <h1>Ma page d'admin</h1>
        {% elseif app.user %}
            <h1>Ma page {{ app.user.name }} {{ app.user.lastname }}</h1>
        {% else %}
            <h1>Ma page d'acceuil</h1>
        {% endif %}


    <h1>Les derniers articles</h1>
    <article class="flex width-90 center">
        {% for article in articles|reverse [0:3] %}
            <div class="width-33 text-center">
                {% for article in article.filename [:1] %}
                <div>
                    <img src="{{ asset("assets/uploads/" ~ article.Filename) }}" alt="" >
                </div>
                {% endfor %}
                <h2><a href="{{ path('Article_Show', {'id': article.id}) }}">{{ article.title }}</a></h2>
                <p> {{ article.description }}</p>
            </div>
        {% endfor %}
    </article>
    <h1>Idée d'exercice</h1>
        <article class="flex width-90 center">
{#            {% for exercice in exercices %}#}
                <div class="width-50 milieu">
                <h2 class="text-center">{{ exercice.name }}</h2>
                <p>{{ exercice.description }}</p>
                </div>
                {% for exercice in exercice.filename %}
                    <div class="width-50">
                        <img src="{{ asset("assets/uploads/" ~ exercice.Filename) }}" alt="" class="resp">
                    </div>
                {% endfor %}
{#            {% endfor %}#}
        </article>

        <h1>Le programmes pour débuter le sport</h1>
        <article class="flex width-90 center">
            {% if program.Filename %}
                <div class="width-50">
                    <img src="{{ asset('assets/uploads/' ~ program.Filename.Filename) }}" class="resp">
                </div>
            {% endif %}
            <div class="width-50 milieu text-center">
            <h2>{{ program.Title }}</h2>
            <p>{{ program.Description }}</p>
            <h3>{{ program.level }}</h3>
            </div>

        </article>
    {% endblock %}
</main>

<footer>
    <div class="width-90 center flex footcontain">
        <h1 class="milieu text-center width-33">Plan du site</h1>
        <div class="logo footlogo width-33">
            <img src="{{ asset('assets/logo/FEONIX_logo_transparent.png') }}" alt="" class="resp">
        </div>
        <nav class=" milieu text-center width-33">
            <h2 class="foottitle">Venez suivre nos actualitées :</h2>
            <div class="flex mediafooter">
                <div class="SocialPicture">
                    <img src="{{ asset('assets/img/Fbicon.svg') }}" alt="" class="resp">
                </div>
                <div class="SocialPicture">
                    <img src="{{ asset('assets/img/Instaicon.svg') }}" alt="" class="resp">
                </div>
                <div class="SocialPicture ">
                    <img src="{{ asset('assets/img/twiticon.svg') }}" alt="" class="resp">
                </div>
            </div>
        </nav>
    </div>
</footer>


{% block javascript %}{% endblock %}
</body>
</html>
