{% extends "base.html.twig" %}


{% block main %}
    <h1>
        Insertion d'article
    </h1>

    {{  form_start(form, {'attr': {'class': 'form'}}) }}
    <section>

        <div class="formBloc">
            <h2>{{ form_label(form.title) }}</h2>
            {{ form_widget(form.title, { 'attr' : {'class' : 'formTitle'} }) }}
            {{ form_errors(form.title) }}
        </div>
        <div class="formBloc">
            <h2>{{ form_label(form.description) }}</h2>
            {{ form_widget(form.description, { 'attr' : {'class' : 'formDescription'} }) }}
            <span class="red">{{ form_errors(form.description) }}</span>
        </div>
        <div>
            <h2>{{ form_label(form.content) }}</h2>
            {{ form_widget(form.content,  {'attr' : {'class' : 'formContent'} }) }}
           <p> {{ form_errors(form.content) }}</p>
        </div>
        <div class="formBloc">
            <h2>{{ form_label(form.creationDate) }}</h2>
            {{ form_widget(form.creationDate,  {'attr' : {'class' : 'formDate'} }) }}
            {{ form_errors(form.creationDate) }}
        </div>
        <div class="formFile">
            <h2>{{ form_label(form.Filename) }}</h2>
            {{ form_widget(form.Filename, { 'attr' : {'class' : 'formFile'} }) }}
            {{ form_errors(form.Filename) }}
        </div>

        {{ form_widget(form.published) }}

        {{ form_row(form.valider, { 'attr' : {'class' : 'submit'} }) }}
    </section>
    {{  form_end(form) }}


    <script src="{{ asset('assets/js/AddForm.js') }}" > </script>

{% endblock %}











































































































